<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="8dp"
        android:paddingTop="16dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="16dp"
        android:background="@drawable/fixtures_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvLeagueName"
            android:layout_centerHorizontal="true"
            android:text="Premier League"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:textColor="@color/yellow_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDateOfFixture"
            android:layout_below="@id/tvLeagueName"
            android:layout_centerHorizontal="true"
            android:text="Jul 25"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvScore"
            android:layout_below="@id/tvDateOfFixture"
            android:layout_centerHorizontal="true"
            android:text="3 : 0"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvVenueName"
            android:layout_below="@id/tvDateOfFixture"
            android:layout_centerHorizontal="true"
            android:text="Emirate Stadium London"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginTop="85dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="54dp"
                    android:id="@+id/ivHomeIcon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/iv_barcelona"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvHomeTeamName"
                    android:layout_below="@+id/ivHomeIcon"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="BARCELONA"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/Home"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHomeTeamName"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Home"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="54dp"
                    android:id="@+id/ivAwayIcon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/iv_real_madrid"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAwayTeamName"
                    android:layout_below="@+id/ivAwayIcon"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="REAL MADRID"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/Away"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAwayTeamName"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Away"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>


