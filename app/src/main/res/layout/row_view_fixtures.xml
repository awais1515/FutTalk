<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/fixtures_background_dark"
    app:cardBackgroundColor="@color/grey_main"
    app:cardCornerRadius="10dp">


    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey_main"
        android:padding="8dp">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/LinearLayoutTimeandDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="07:30"
                    android:textColor="@color/yellow_main"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tvDateOfFixture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTime"
                    android:layout_centerHorizontal="true"

                    android:fontFamily="@font/poppins_regular"
                    android:text="Jul 25"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RelativeLayoutTeamsContainer">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentLeft="true">


            <ImageView
                android:id="@+id/ivHomeIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/iv_barcelona" />

            <TextView
                android:id="@+id/tvHomeTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivHomeIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_semi_bold"
                android:maxLines="2"
                android:textAlignment="center"
                android:text="BARCELONA"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivAwayIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/iv_real_madrid"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/tvAwayTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivAwayIcon"
                android:fontFamily="@font/poppins_semi_bold"
                android:layout_centerHorizontal="true"
                android:maxLines="2"
                android:text="REAL MADRID"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvVenueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RelativeLayoutTeamsContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Emirate Stadium London"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>