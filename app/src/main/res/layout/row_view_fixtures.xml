<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:background="@drawable/fixtures_background"
    android:layout_height="140dp">


    <RelativeLayout
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:background="@color/grey_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTime"
            android:layout_centerHorizontal="true"
            android:text="07:30"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="12sp"
            android:textColor="@color/yellow_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDateOfFixture"
            android:layout_below="@id/tvTime"
            android:layout_centerHorizontal="true"
            android:text="Jul 25"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="12sp"
            android:textColor="@color/light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvVenueName"
            android:layout_below="@id/tvDateOfFixture"
            android:layout_centerHorizontal="true"
            android:text="Emirate Stadium London"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="14dp"
            android:id="@+id/tvHomeTeamName"
            android:text="BARCELONA"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/ivHomeIcon"
            android:layout_toRightOf="@+id/tvHomeTeamName"
            android:src="@drawable/iv_barcelona"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_marginTop="14dp"
            android:id="@+id/tvAwayTeamName"
            android:text="REAL MADRID"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivAwayIcon"
            android:layout_toLeftOf="@+id/tvAwayTeamName"
            android:src="@drawable/iv_real_madrid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>





</RelativeLayout>