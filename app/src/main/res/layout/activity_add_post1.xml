<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPost1"
    android:background="@color/black">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/topbar"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        android:layout_margin="10dp"
        android:id="@+id/tv_LiveFeed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Feed"
        android:fontFamily="@font/poppins_bolditalic"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/tv_LiveFeed"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:backgroundTint="@color/light_grey"
        android:text="Manchester United"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:paddingTop="1dp"
        android:paddingBottom="1dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/fixtures_background"
        android:layout_height="140dp"
        android:layout_below="@+id/topbar"
        />
</RelativeLayout>

